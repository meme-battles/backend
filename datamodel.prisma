type User {
	id: ID! @id
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
	name: String!
	password: String!
	email: String! @unique
	role: Role! @default(value: USER)
	memes: [Meme!]! @relation(name: "PostedBy")
}

type Meme {
	id: ID! @id
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
	postedBy: User! @relation(name: "PostedBy")
	likedBy: [User!]! @relation(name: "LikedMemes")
	imgLink: String!
	cumulative: Int! @default(value: 0)
	votesUp: Int! @default(value: 0)
	vsBattleWins: Int! @default(value: 0)
	vsBattleLoses: Int! @default(value: 0)
}

enum Role {
	ADMIN
	USER
}
